{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2019",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true ,
        "resolveJsonModule": true,
        "lib": [
            "dom",
            "es2019"
          ],
          "types": [
            "jest",
            "node",
            "webgl2",
            "offscreencanvas"
          ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "decs.d.ts"
    ],
    "typeRoots": [
        "@types",
        "./node_modules/@types",
      ] 
}